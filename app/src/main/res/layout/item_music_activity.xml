<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/music_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/music_name"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/textSize_18"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/music_song"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toTopOf="@+id/music_line"
        app:layout_constraintLeft_toLeftOf="@+id/music_name"
        app:layout_constraintRight_toRightOf="@+id/music_name"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/music_name" />

    <View
        android:id="@+id/music_line"
        android:background="#FFDDEE"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
</androidx.constraintlayout.widget.ConstraintLayout>