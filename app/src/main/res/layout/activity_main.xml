<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.henry.mediaaction.view.StateBar
        android:id="@+id/topStateBar"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:state_bar_back_color="@color/white"
        app:state_bar_need_dark="true" />

    <TextView
        android:id="@+id/videoJump"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#aa1700"
        android:gravity="center"
        android:text="视频播放"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/musicJump"
        app:layout_constraintTop_toBottomOf="@+id/topStateBar"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/musicJump"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#17aa00"
        android:gravity="center"
        android:text="音乐播放"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoJump" />

</androidx.constraintlayout.widget.ConstraintLayout>